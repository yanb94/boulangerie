<div class="drawer">
    <div class="head">Le Bon Pain</div>
    <div class="list">
        {% for page in pages.children.visible %}
            {% if page.header.onpage_menu %}
                <div class="list-item">
                    <div class="list-item">
                        <a href="{{ page.url|e }}">
                            {{ page.menu|e }}
                        </a>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        <div class="list-item">
            <div class="list-item">
                <a href="/contact">
                    Contact
                </a>
            </div>
        </div>
        {% for page in taxonomy.findTaxonomy({'type':'legal'}) %}
                <div class="list-item">
                    <div class="list-item">
                        <a href="{{ page.url|e }}">
                            {{ page.header.menu|e }}
                        </a>
                    </div>
                </div>
        {% endfor %}
    </div>
</div>